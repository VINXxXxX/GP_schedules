<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomNavText">
        <item name="android:textSize">13.5sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.12</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>


    <style name="WidgetTitleBold">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="WidgetDateBold">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="WidgetSessionBold">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="WidgetCountdownBold">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="NoOverlayBottomNav" parent="Widget.Material3.BottomNavigationView">

        <!-- Remove selection background -->
        <item name="itemBackground">@null</item>
        <!-- Remove ripple -->
        <item name="itemRippleColor">@null</item>

    </style>

</resources>
