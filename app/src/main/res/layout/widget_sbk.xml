<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="10dp"
    android:paddingVertical="8dp"
    android:background="@drawable/widget_gradient_sbk">

    <!-- Main content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <!-- SBK 1 - CITY -->
        <TextView
            android:id="@+id/widget_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="32sp"
            android:fontFamily="sans-serif-black"
            android:textStyle="bold" />

        <!-- 1 FEB -->
        <TextView
            android:id="@+id/widget_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="#DDDDDD"
            android:textSize="20sp"
            android:fontFamily="sans-serif-black" />

        <!-- Sessions table -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">

            <!-- FRI -->
            <TextView
                android:id="@+id/friday_sessions"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:fontFamily="sans-serif-black"
                android:textStyle="bold"
                android:gravity="center" />

            <!-- SAT -->
            <TextView
                android:id="@+id/saturday_sessions"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:fontFamily="sans-serif-black"
                android:textStyle="bold"
                android:gravity="center" />

            <!-- SUN -->
            <TextView
                android:id="@+id/sunday_sessions"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:fontFamily="sans-serif-black"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingBottom="10dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Countdown â€” top right -->
    <TextView
        android:id="@+id/widget_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="#FF1744"
        android:textSize="16sp"
        android:fontFamily="sans-serif-black"
        android:textStyle="bold"
        android:background="@drawable/countdown_rounded_sbk"
        android:paddingHorizontal="12dp"
        android:paddingVertical="6dp" />
</FrameLayout>