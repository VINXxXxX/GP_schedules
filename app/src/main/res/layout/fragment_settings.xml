<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <!-- APP VERSION (PLAIN TEXT) -->
    <TextView
        android:id="@+id/versionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        tools:text="APP VERSION 1.0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- CHECK FOR UPDATES (RACING BUTTON) -->
    <TextView
        android:id="@+id/checkUpdateButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="CHECK FOR UPDATES"
        android:textSize="14sp"
        android:letterSpacing="0.12"
        android:background="@drawable/bg_racing_button_dark"
        android:clickable="true"
        android:focusable="true"
        tools:ignore="HardcodedText"
        app:layout_constraintTop_toBottomOf="@id/versionText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- LIGHT MODE ROW (RACING STYLE) -->
    <LinearLayout
        android:id="@+id/themeToggleContainer"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:background="@drawable/bg_racing_button_dark"
        app:layout_constraintTop_toBottomOf="@id/checkUpdateButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/lightModeLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="LIGHT MODE"
            android:textSize="14sp"
            android:letterSpacing="0.12"
            tools:ignore="HardcodedText" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/themeSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
